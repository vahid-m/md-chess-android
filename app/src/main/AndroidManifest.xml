<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nemesis.materialchess"

    android:installLocation="auto">
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"

        android:theme="@style/AppTheme">
        <activity
            android:name="org.empyrn.darkknight.ChessTastic"
            android:configChanges="orientation"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.empyrn.darkknight.Preferences"
            android:label="Preferences"
            android:parentActivityName="org.empyrn.darkknight.ChessTastic">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.empyrn.darkknight.ChessTastic" />

        </activity>
        <activity
            android:name="org.empyrn.darkknight.EditBoard"
            android:configChanges="orientation"
            android:label="Edit Board"></activity>
        <activity
            android:name="org.empyrn.darkknight.LoadPGN"
            android:configChanges="orientation"
            android:label="Load PGN game"></activity>
        <activity
            android:name="org.empyrn.darkknight.CPUWarning"
            android:label="CPU Warning"></activity>
        <activity
            android:name="org.empyrn.darkknight.bluetooth.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="Select Device"
            android:theme="@android:style/Theme.Dialog"></activity>
    </application>
</manifest>
